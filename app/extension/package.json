{
  "name": "@onchain-clippy/extension",
  "version": "1.0.0",
  "private": false,
  "sideEffects": false,
  "extension": {
    "name": "Onchain Clippy",
    "description": "A simple dockerfile running an ethereum light client"
  },
  "type": "module",
  "scripts": {
    "all": "pnpm i && bun run build",
    "build": "nx run-many --targets=build:dist,build:types",
    "build:dist": "tsup",
    "dev": "cross-env NODE_ENV=development bun run build",
    "build:types": "tsup --dts-only",
    "watch": "tsc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@onchain-clippy/light-client": "workspace:^",
    "@tevm/tsconfig": "1.0.0-next.117",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "cross-env": "^7.0.3",
    "typescript": "^5.3.3"
  }
}